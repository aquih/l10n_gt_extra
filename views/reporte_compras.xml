<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reporte_compras">
        <t t-call="web.html_container">
            <t t-set="data_report_page_offset" t-value="data['folio_inicial']-1"/>
            <div class="header">
                Folio: <span class="page"/>
            </div>
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: Libro de compras y servicios</h2>


                    <div class="row mt32">
                        <div class="col-xs-4">
                            <strong>Número de identificación tributaria:</strong> <span t-field="user.company_id.vat"/><br/>
                            <strong>Nombre comercial:</strong> <span t-field="user.company_id.partner_id.name"/><br/>
                        </div>
                        <div class="col-xs-4">
                            <strong>Domicilio fiscal:</strong> <span t-field="user.company_id.partner_id.street"/><br/>
                            <strong>Registro del:</strong> <span t-esc="data['fecha_desde']" t-esc-options='{"widget": "date"}'/> al: <span t-esc="data['fecha_hasta']" t-esc-options='{"widget": "date"}'/><br/>
                        </div>
                    </div>

                    <t t-set="result" t-value="lineas(data)"/>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Fecha</th>
                                <th>Doc</th>
                                <th>Proveedor</th>
                                <th>NIT</th>
                                <th class="text-right">Comp.</th>
                                <th class="text-right">Comp. Exe.</th>
                                <th class="text-right">Serv.</th>
                                <th class="text-right">Serv. Exe.</th>
                                <th class="text-right">Comb.</th>
                                <th class="text-right">Comb. Exe.</th>
                                <th class="text-right">Imp.</th>
                                <th class="text-right">IVA</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="result['lineas']" t-as="l">
                                <td>
                                    <span t-esc="l['tipo']"/>
                                </td>
                                <td>
                                    <span t-esc="l['fecha']" t-esc-options='{"widget": "date"}'/>
                                </td>
                                <td>
                                    <span t-esc="l['numero']"/>
                                </td>
                                <td>
                                    <span t-esc="l['proveedor'].name"/>
                                </td>
                                <td>
                                    <span t-esc="l['proveedor'].vat"/>
                                </td>
                                <td class="text-right">
                                     <span t-esc="l['compra']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['compra_exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['servicio']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['servicio_exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['combustible']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['combustible_exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['importacion']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                </td>
                                <td>
                                </td>
                                <td>
                                </td>
                                <td>
                                    Totales
                                </td>
                                <td>
                                </td>
                                <td class="text-right">
                                     <span t-esc="result['totales']['compra']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['servicio']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['servicio']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['combustible']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['combustible']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['importacion']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['combustible']['iva'] + result['totales']['importacion']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['combustible']['total'] + result['totales']['importacion']['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    Total de facturas de pequeños contribuyentes:
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['pequenio_contribuyente']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Cantidad de facturas:
                                </td>
                                <td class="text-right">
                                    <span t-esc="'{0:,.0f}'.format(result['totales']['num_facturas'])"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Total credito fiscal:
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['combustible']['iva'] + result['totales']['importacion']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div><strong>Resumen:</strong></div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="text-right">Exento</th>
                                <th class="text-right">Neto</th>
                                <th class="text-right">IVA</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Compras
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Servicios
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['servicio']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['servicio']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['servicio']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['servicio']['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Combustibles
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['combustible']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['combustible']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['combustible']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['combustible']['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Importaciones
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['importacion']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['importacion']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['importacion']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['importacion']['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>
                                    Totales
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['exento'] + result['totales']['servicio']['exento'] + result['totales']['combustible']['exento'] + result['totales']['importacion']['exento']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['neto'] + result['totales']['servicio']['neto'] + result['totales']['combustible']['neto'] + result['totales']['importacion']['neto']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['combustible']['iva'] + result['totales']['importacion']['iva']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['combustible']['total'] + result['totales']['importacion']['total']" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
